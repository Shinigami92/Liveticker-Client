<Window x:Class="Liveticker_Client.TickErstellen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liveticker" Height="350" Width="525" FontSize="16" WindowStyle="None" WindowStartupLocation="CenterScreen" MinWidth="525" MinHeight="350">
    <Grid>
        <Label Content="Titel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,12,0,0" />
        <TextBox Margin="58,16,325,0" Name="tbxTitle" Height="23" VerticalAlignment="Top" />
        <Label Content="Sportart" VerticalAlignment="Top" Margin="0,12,252,0" HorizontalAlignment="Right" Width="67" />
        <ComboBox Margin="0,12,12,0" Name="cbxSportart" VerticalAlignment="Top" HorizontalAlignment="Right" Width="234" Loaded="cbxSportart_Loaded" SelectedIndex="0" />
        <Label Content="Inhalt" HorizontalAlignment="Left" Margin="12,49,0,0" VerticalAlignment="Top" />
        <RichTextBox Margin="12,86,12,12" Name="rtbxBeschreibung" />
        <Button Content="TICK ERSTELLEN  >" Padding="6,6" Name="button1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnTickErstellen_Click" />
    </Grid>
</Window>